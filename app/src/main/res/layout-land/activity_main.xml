<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/showText"
        android:layout_height="100dp"
        android:layout_width="match_parent"
        android:background="@color/c1"
        android:textSize="50dip"/>


   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="match_parent"
       android:orientation="horizontal">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical">

           <Button
               android:id="@+id/bt_AC"
               android:layout_width="100dp"
               android:layout_height="0dp"
               android:layout_weight="1"
               android:text="AC"
               android:textSize="30sp" />
           <Button
               android:layout_width="100dp"
               android:layout_height="0dp"
               android:layout_weight="1"
               android:id="@+id/bt_delete"
               android:text="回退"
               android:textSize="30sp"/>

           <Button
               android:layout_width="100dp"
               android:layout_height="0dp"
               android:layout_weight="1"
               android:id="@+id/bt_help"
               android:text="帮助"
               android:textSize="30sp"
               />
           <Button
               android:id="@+id/bt_sc"
               android:layout_width="100dp"
               android:layout_height="0dp"
               android:layout_weight="1"
               android:text=">"
               android:textSize="30sp"/>
       </LinearLayout>
       <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
           <Button
               android:layout_width="100dp"
               android:layout_height="0dp"
               android:layout_weight="1"
               android:id="@+id/bt_1"
               android:text="1"
               android:textSize="30sp"/>
           <Button
               android:layout_width="100dp"
               android:layout_height="0dp"
               android:layout_weight="1"
               android:id="@+id/bt_2"
               android:text="2"
               android:textSize="30sp"/>
           <Button
               android:layout_width="100dp"
               android:layout_height="0dp"
               android:layout_weight="1"
               android:id="@+id/bt_3"
               android:text="3"
               android:textSize="30sp"/>
           <Button
               android:layout_width="100dp"
               android:layout_height="0dp"
               android:layout_weight="1"
               android:id="@+id/bt_4"
               android:text="4"
               android:textSize="30sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:layout_width="100dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:id="@+id/bt_5"
                android:text="5"
                android:textSize="30sp"/>
            <Button
                android:layout_width="100dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:id="@+id/bt_6"
                android:text="6"
                android:textSize="30sp"/>
            <Button
                android:layout_width="100dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:id="@+id/bt_7"
                android:text="7"
                android:textSize="30sp"/>
            <Button
                android:layout_width="100dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:id="@+id/bt_8"
                android:text="8"
                android:textSize="30sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <Button
                android:layout_width="100dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:id="@+id/bt_9"
                android:text="9"
                android:textSize="30sp"/>
            <Button
                android:layout_width="100dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:id="@+id/bt_0"
                android:text="0"
                android:textSize="30sp"/>
            <Button
                android:layout_width="100dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:id="@+id/bt_left"
                android:text="("
                android:textSize="30sp"/>
            <Button
                android:layout_width="100dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:id="@+id/bt_right"
                android:text=")"
                android:textSize="30sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <Button
                android:layout_width="100dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:id="@+id/bt_sin"
                android:text="SIN"
                android:textSize="30sp"/>
            <Button
                android:layout_width="100dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:id="@+id/bt_cos"
                android:text="cos"
                android:textSize="30sp"/>
            <Button
                android:layout_width="100dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:id="@+id/bt_tan"
                android:text="tan"
                android:textSize="30sp"/>
            <Button
                android:layout_width="100dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:id="@+id/bt_108"
                android:text="10>8"
                android:textSize="30sp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:layout_width="100dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:id="@+id/bt_1016"
                android:text="1016"
                android:textSize="30sp"/>
            <Button
                android:layout_width="100dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:id="@+id/bt_102"
                android:text="10>2"
                android:textSize="30sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <Button
                android:layout_width="100dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:id="@+id/bt_mi"
                android:text="m"
                android:textSize="30sp"/>
            <Button
                android:layout_width="100dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:id="@+id/bt_tiji"
                android:text="m^3"
                android:textSize="30sp"/>
        </LinearLayout>
   </LinearLayout>

</LinearLayout>